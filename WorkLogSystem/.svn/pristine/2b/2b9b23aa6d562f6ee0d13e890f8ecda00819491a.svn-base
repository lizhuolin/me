<?xml version="1.0" encoding="UTF-8" ?>

<taglib xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
	version="2.1">


	<description>worklogsystem privilege taglib</description><!-- 描述 -->
	<display-name>privilege taglib</display-name>
	<tlib-version>1.0</tlib-version><!-- 版号 -->
	<short-name>pb</short-name> <!-- 简单名称 -->
	<uri>http://http://www.poobo.com//tags/privilege-1.0</uri>

	<tag>
		<description>权限校验标签，有权限就显示标签体的内容，否则不显示</description>
		<name>pri</name> <!-- 标签名 -->
		<tag-class>com.poobo.core.util.PrivilegeTag</tag-class> <!-- 标签类 -->
		<body-content>JSP</body-content>
		<attribute>
			<description></description>
			<name>module</name> <!-- 属性名 -->
			<required>false</required> <!-- 标签的属性是否是必须的 -->
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		<attribute>
			<description></description>
			<name>privilege</name>
			<required>true</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
	</tag>
</taglib>
