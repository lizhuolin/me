@charset "utf-8";
/* CSS Document */

.lg_bg {
position:absolute; 
top:0; 
left:0; 
height:110%; 
width:100%; 
background-image:url(../images/ui_bg.png); 
background-position: center 0; 
background-repeat: no-repeat; 
background-attachment:fixed; 
background-size: cover; 
-webkit-background-size: cover;/* 兼容Webkit内核浏览器如Chrome和Safari */ 
-o-background-size: cover;/* 兼容Opera */ 
zoom: 1; 

} 
.zilogo {
	margin-bottom: 10px;
    margin-top: 5%;
    font-size: 38px;
    margin-left: 37%;
    color: #6b6d6c;
	font-family: "汉仪中圆简";
}
.lg_logo img {
    margin-left: 38%;
    width: 100px;
    margin-bottom: 30px;
}
li {
    list-style-type: none;
}
.lg_disc{
	 margin-left: 37%;
    /* margin-right: 30%; */
    background-color: #d4d6e0;
    width: 400px;
	height: 370px;
	
}

input[type="text"],input[type="password"] {
    height: 40px;
    border: none;
	width: 250px;

}
.lg_disc span{ display:inline-block; vertical-align:top;margin-top: 50px;}
span img {
     height: 20px;
