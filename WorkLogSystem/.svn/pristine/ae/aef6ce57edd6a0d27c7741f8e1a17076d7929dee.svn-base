<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="task" namespace="/task" extends="struts-default,json-default">
	
		<action name="task_*" class="com.poobo.task.action.TaskAction" method="{1}">
			<result name="{1}">/WEB-INF/jsp/task/{1}.jsp</result>
			
			
			
		</action>
		
		<action name="json_task_*" class="com.poobo.task.action.TaskAction" method="{1}">
			<result type="json">
				<!-- 这里指定将被Struts2序列化的属性，该属性在action中必须有对应的getter方法 -->
				<param name="root">resultData</param>
			</result>
		</action>
	</package>


	<package name="mobileTask" namespace="/mobile/task" extends="struts-default,json-default">
		<action name="mobile_*" class="com.poobo.task.action.TaskAction" method="{1}">
			<result name="{1}">/WEB-INF/jsp/mobile/{1}.jsp</result>
			<result name="success">/WEB-INF/jsp/mobile/task_detailList.jsp</result>
		</action>	
	</package>
	
	
</struts>
