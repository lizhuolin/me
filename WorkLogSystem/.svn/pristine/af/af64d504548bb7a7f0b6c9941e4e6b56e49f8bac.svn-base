<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 禁用动态方法访问 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<!-- 配置成开发模式 -->
	<constant name="struts.devMode" value="true" />
	 <!-- 配置拓展名为action -->
	<constant name="struts.action.extension" value="action"/>
	
	<!-- 把Action对象交给Spring创建和管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.objectFactory" value="spring"/>  
	<constant name="struts.objectFactory.spring.autoWire.alwaysRespect" value="true" />
	
	<!-- 把主题配置成simple -->
	<constant name="struts.ui.theme" value="simple" />
	<!-- 包含demo的struts配置文件 -->
	<include file="com/poobo/demo/conf/demo-struts.xml"></include>
	<!-- 包含项目管理的struts配置文件 -->
	<include file="com/poobo/project/conf/project-struts.xml"></include>
	<!-- 包含项目计划管理的struts配置文件 -->
	<include file="com/poobo/plan/conf/plan-struts.xml"></include>
	<!-- 包含个人日志管理的struts配置文件 -->
	<include file="com/poobo/log/conf/log-struts.xml"></include>
	<!-- 包含用户管理的struts配置文件 -->
	<include file="com/poobo/user/conf/user-struts.xml"></include>
	<!-- 包含任务管理的struts配置文件 -->
	<include file="com/poobo/task/conf/task-struts.xml"></include>
	<!-- 包含公司管理的struts配置文件 -->
	<include file="com/poobo/company/conf/company-struts.xml"></include>
	<!-- 包含角色管理的struts配置文件 -->
	<include file="com/poobo/role/conf/role-struts.xml"></include>
	<!-- 包含角色管理的struts配置文件 -->
	<include file="com/poobo/dept/conf/dept-struts.xml"></include>
	<!-- 包含定时报告的struts配置文件 -->
	<include file="com/poobo/timereport/conf/timereport-struts.xml"></include>
	<!-- 包含角提醒报告的struts配置文件 -->
	<!-- <include file="com/poobo/reportwarn/conf/reportwarn-struts.xml"></include> -->

	<include file="com/poobo/notice/conf/notice-struts.xml"></include>
	<!-- 包含手机任务管理的struts配置文件 -->
	<include file="com/poobo/mobile/conf/task-struts.xml"></include>
	<!-- 包含权限管理的struts配置文件 -->
	<include file="com/poobo/privilege/conf/privilege-struts.xml"></include>
	
</struts>
